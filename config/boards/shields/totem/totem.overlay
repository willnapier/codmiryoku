// config/boards/shields/totem/totem.overlay

/ {
  compatible = "zmk,keyboard-shield";
  label = "Totem";

  kscan {
    compatible = "zmk,kscan-gpio-matrix";
    row-gpios = < &gpio0 0 GPIO_ACTIVE_LOW >, < &gpio0 1 GPIO_ACTIVE_LOW >, < &gpio0 2 GPIO_ACTIVE_LOW >;
    col-gpios = < &gpio0 3 GPIO_ACTIVE_LOW >, < &gpio0 4 GPIO_ACTIVE_LOW >, < &gpio0 5 GPIO_ACTIVE_LOW >,
                 < &gpio0 6 GPIO_ACTIVE_LOW >, < &gpio0 7 GPIO_ACTIVE_LOW >;
    diode-direction = < KSCAN_ROW2COL >;
  };
};
